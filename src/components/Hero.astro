---
interface Props {
  title?: string;
  subtitle?: string;
  backgroundImage?: string;
  locale?: 'fi' | 'en';
}

const { 
  title = 'RAVINTOLA KÄSKYNKKÄ',
  subtitle = 'Maukkaasta ruoasta tunnettu ruoka- ja seurusteluravintola',
  backgroundImage = '/images/IMG_3046-1024x682.jpg',
  locale = 'fi'
} = Astro.props;

const content = {
  fi: {
    scroll: 'Vieritä',
    menu: 'Näytä Menu',
    story: 'Meidän Tarinamme'
  },
  en: {
    scroll: 'Scroll',
    menu: 'View Menu',
    story: 'Our Story'
  }
}[locale]
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <img 
      src={backgroundImage} 
      alt="Restaurant ambiance"
      class="w-full h-full object-cover"
      onerror="this.style.display='none'"
    />
    <div class="absolute inset-0 bg-black/60"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
    <h1 class="font-serif text-5xl md:text-7xl lg:text-8xl text-light tracking-ultra uppercase mb-6">
      {title}
    </h1>
    <p class="font-sans text-lg md:text-xl text-muted tracking-widest uppercase">
      {subtitle}
    </p>
  </div>
</section>

<style>
  /* Fallback for when image doesn't load */
  section::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    z-index: -1;
  }
</style>
