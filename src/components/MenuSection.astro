---
import MenuItem from './MenuItem.astro'
import FantasyPizzaSelector from './FantasyPizzaSelector.astro'
import { CATEGORIES, MENU_ITEMS, type Locale } from '../data/menu'

interface Props {
  locale?: Locale
}

const { locale = 'fi' } = Astro.props
---

<section id="menu" class="py-32 px-4">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="font-serif text-4xl md:text-5xl text-accent mb-4">
        {locale === 'fi' ? 'Á La Carte - Suosikkiannoksemme' : 'À La Carte - Our Favorites'}
      </h2>
      <p class="text-muted font-sans tracking-wider uppercase text-sm">
        {locale === 'fi' ? 'Tunnettu runsaista pihviaterioista ja korkealaatuisesta lihasta' : 'Known for generous steak portions and high-quality meat'}
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="lg:col-span-2">
        <p class="text-muted text-center mb-8">
          {locale === 'fi' 
            ? 'Valitse suosikkiannoksesi ja tee tilaus suoraan verkossa. Nouto ravintolasta.' 
            : 'Choose your favorites and order directly online. Pick up at the restaurant.'}
        </p>
        
        <div class="flex flex-wrap justify-center gap-2 mb-8" id="category-tabs">
          {CATEGORIES.map((cat, index) => (
            <button 
              class={`category-tab px-4 py-2 font-sans uppercase tracking-wider text-xs border transition-all duration-300 ${index === 1 ? 'bg-accent text-dark border-accent' : 'border-accent text-accent hover:bg-accent/10'}`}
              data-category={cat.id}
            >
              {cat.label[locale]}
            </button>
          ))}
        </div>

        <div id="menu-items-container">
          {CATEGORIES.map((cat, index) => {
            const items = MENU_ITEMS.filter(item => item.category_id === cat.id)
            return (
              <div 
                class={`category-section ${index === 1 ? 'block' : 'hidden'}`} 
                data-category={cat.id}
              >
                <h3 class="font-serif text-2xl text-accent mb-6 text-center">{cat.label[locale]}</h3>
                <div class="space-y-0">
                  {items.map((item) => (
                    <MenuItem item={item} locale={locale} />
                  ))}
                </div>
              </div>
            )
          })}
        </div>
        
        <div class="mt-12 text-center">
          <p class="text-muted text-sm italic">
            {locale === 'fi' 
              ? '* Kysy lisää vaihtoehdoista henkilökunnaltamme. Saatavuus voi vaihdella.'
              : '* Ask our staff for more options. Availability may vary.'}
          </p>
        </div>
      </div>
      
      <aside class="lg:col-span-1">
        <div class="sticky top-8">
          <slot />
        </div>
      </aside>
    </div>
  </div>
</section>

<FantasyPizzaSelector locale={locale} />

<script>
  // Category tab switching
  document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll('.category-tab')
    const sections = document.querySelectorAll('.category-section')
    
    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const category = tab.getAttribute('data-category')
        
        // Update tab styles
        tabs.forEach(t => {
          t.classList.remove('bg-accent', 'text-dark')
          t.classList.add('text-accent', 'hover:bg-accent/10')
        })
        tab.classList.remove('text-accent', 'hover:bg-accent/10')
        tab.classList.add('bg-accent', 'text-dark')
        
        // Show/hide sections
        sections.forEach(section => {
          if (section.getAttribute('data-category') === category) {
            section.classList.remove('hidden')
            section.classList.add('block')
          } else {
            section.classList.remove('block')
            section.classList.add('hidden')
          }
        })
      })
    })
  })
</script>
